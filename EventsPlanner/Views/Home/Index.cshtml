@section styles{
    @Styles.Render("~/Content/fullcalendar.css")
    @Styles.Render("~/Content/main-page.css")
    @Styles.Render("~/Content/event-form.css")
    @Styles.Render("~/Content/animate.css")
    @Styles.Render("~/Content/bootstrap-datetimepicker.css")

}
@section scripts{

    @Scripts.Render("~/Scripts/moment.js")
    @Scripts.Render("~/Scripts/fullcalendar/fullcalendar.js")
    @Scripts.Render("~/Scripts/fullcalendar/locale/ru.js")
    @Scripts.Render("~/Scripts/bootstrap-datetimepicker.js")
