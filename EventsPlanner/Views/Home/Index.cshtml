    <div class="col-md-8">
        <div id="calendar" class="animated fadeInLeftBig"></div>
    </div>
    <div class="col-md-4">
        <div id="event-form">
            <span style="font-size:24px; font-weight:100  !important">
                <small style="color:#b8b8b8">Выбирете день или событие на календаре.</small>
            </span>
            @*<div class="loader"></div>*@
        </div>

    </div>
</div>
