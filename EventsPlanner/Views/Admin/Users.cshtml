@model IEnumerable<EventsPlanner.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>Все пользователи</h2>

<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Id)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Логин
        </th>
        <th>
            Тип аккаунта
        </th>
        <th>
            Заблок.?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    @*<td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserType)
    </td>
    <td>
        @if (item.LockoutEnabled)
        {<Text>Да</Text>}
        else
        {
            <Text>Нет</Text>
        }

    </td>

    <td>
        @Html.ActionLink("Изменить", "UserEdit", new { id = item.Id }) |
        @Html.ActionLink("Подробнее", "UserDetails", new { id = item.Id }) |
        @Html.ActionLink("Удалить", "UserDelete", new { userId = item.Id }) |
        @Html.ActionLink(@item.LockoutEnabled ? "Разблокировать" : "Блокировать", "UserBlock", new { userId = item.Id, block = !@item.LockoutEnabled })
    </td>
</tr>
}

</table>
