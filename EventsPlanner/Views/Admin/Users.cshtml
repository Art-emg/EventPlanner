@model IEnumerable<EventsPlanner.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            Заблок.
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @item.LockoutEnabled

    </td>

    <td>
        @Html.ActionLink("Edit", "UserEdit", new { id = item.Id }) |
        @Html.ActionLink("Details", "UserDetails", new { id = item.Id }) |
        @Html.ActionLink("Delete", "UserDelete", new { userId = item.Id }) |
        @Html.ActionLink(@item.LockoutEnabled ? "Unblock" : "Block", "UserBlock", new { userId = item.Id, block = !@item.LockoutEnabled })
    </td>
</tr>
}

</table>
